.left
  .left__user
    .left__user__contents
      .left__user__contents--user-name
        = current_user.name
      = link_to new_group_path, class: "left__user__contents--new-group" do
        %i.fa.fa-pencil-square-o
      = link_to edit_user_path(current_user), class: "left__user__contents--edit-user" do
        %i.fa.fa-cog
  .left__groups
    - groups.each do |group|
      = render partial: "groups/groups", locals: { group: group}
